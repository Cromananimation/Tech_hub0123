<h2 class="title pb-4">Log In</h2>
  <form action="/login" method="POST" id="login-form" class="card-body">
    <div class="form-row">
      <label class="form-label" for="username-login">Username</label>
      <input id="username-login" type="text" autofocus="true" class="form-input form-control" required/>
    </div>
    <div class="form-row mb-3">
      <label class="form-label" for="password-login">Password</label>
      <input id="password-login" type="password" autofocus="true" class="form-input form-control" required/>
    </div>
      {{#if message}}
        <p class="error-message">{{message}}</p>
      {{/if}}
      <button type="submit" class="btn">Login</button>
      <a class="btn login-link" href="/signup">Sign Up</a>
  </form>

